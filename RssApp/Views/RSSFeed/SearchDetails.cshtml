
@{
    ViewBag.Title = "SearchDetails";
}

<style>
    .search {
        width: 200px;
    }
</style>

<input type="text" class="search" />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Link</th>
            <th>Description</th>
            <th>Publish Date</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.RSSFeed != null)
        {
            foreach (var item in ViewBag.RSSFeed)
            {
                <tr>
                    <td>@item.Title</td>
                    <td><a href="@item.Link">@item.Link</a></td>
                    <td>@item.Description</td>
                    @*<td>@item.PubDate</td>*@

                    <td><img src="@item.Source" alt="" /></td>
                </tr>
            }
        }
    </tbody>
</table>

@* Here We need some Jquery code to hanle text box *@
@section Scripts{
    <script>
        $(document).ready(function () {
            alert("In Details");

            $(".search").change(function () {
                alert("The text has been changed.");
                var search = $(".search").val();
                $('.details').load('@Url.Action("SearchDetails", "RSSFeed")', { search: search});
            });

        });
    </script>
}



